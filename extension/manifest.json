{
  "name": "Twitch Go!",
  "version": "2",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "16": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "persistent": true,
    "scripts": ["index.js"]
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "desktopCapture"
  ]
}
